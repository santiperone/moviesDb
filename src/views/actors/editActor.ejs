<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %> 
    <h1 class="user-form-title">Editando a <%= actor.first_name + ' ' + actor.last_name %></h1>
    <form class="user-form" action="/actors/edit/<%= actor.id %>" method="POST">
        <div>
            <input type="text" name="first_name" id="first_name" required placeholder=" " value="<%= actor.first_name %>">     
            <label for="first_name">Nombre</label>      
        </div>   
        <div>
            <input type="text" name="last_name" id="last_name" required placeholder=" " value="<%= actor.last_name %>">     
            <label for="last_name">Apellido</label>      
        </div>   
        <div>
            <input type="number" id="rating" name="rating" required placeholder=" " value="<%= actor.rating %>">
            <label for="rating">Rating</label>
        </div>
        <div>
            <select name="favorite_movie_id" id="favorite_movie_id">
                <% movies.forEach(movie => { %>
                <% if (movie.id == actor.favorite_movie_id) { %>
                <option value="<%= movie.id %>" selected><%= movie.title %></option>
                <% } else { %>                 
                <% } %>
                <option value="<%= movie.id %>"><%= movie.title %></option>
                <% }) %>
            </select>
            <label for="favorite_movie_id">Pelicula favorita</label>
        </div>

        <button type="submit" class="submit-button">Publicar</button>
    </form>

    <%- include('../partials/footer') %>
</body>
</html>